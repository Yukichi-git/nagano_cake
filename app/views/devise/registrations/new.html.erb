<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="col-sm-2">名前</div>
        <div class="col-sm-1">(性)</div>
        <div class="col-sm-2">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="col-sm-1">(名)</div>
        <div class="col-sm-6">
          <%= f.text_field :last_name, autocomplete: "name" %>
        </div>


        <div class="col-sm-2">フリガナ</div>
        <div class="col-sm-1">(セイ)</div>
        <div class="col-sm-2">
          <%= f.text_field :first_name_kana, autocomplete: "" %>
        </div>
        <div class="col-sm-1">(メイ)</div>
        <div class="col-sm-6">
          <%= f.text_field :last_name_kana, autocomplete: "name" %>
        </div>


        <div class="col-sm-3">メールアドレス</div>
        <div class="col-sm-8">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>


        <div class="col-sm-3">郵便番号(ハイフン無し)</div>
        <div class="col-sm-8">
          <%= f.text_field :postal_code %>
        </div>


        <div class="col-sm-3">住所</div>
        <div class="col-sm-8">
          <%= f.text_field :address %>
        </div>

        <div class="col-sm-3">電話番号(ハイフン無し)</div>
        <div class="col-sm-8">
          <%= f.text_field :telephone_number %>
        </div>


        <div class="col-sm-3">パスワード(６文字以上)</div>
        <div class="col-sm-8">
          <% if @minimum_password_length %>

          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="col-sm-3">パスワード(確認用)</div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
    </div>
    <div class="col-sm-4"></div>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <h2>既に登録済みの方</h2>
      <div class="col-sm-1">
        <%= render "devise/shared/links" %>
      </div>
      <div class="col-sm-8">からログインしてください。</div>
      <div class="col-sm-2"></div>
    </div>
  </div>
</div>